<Alloy>
	<NavigationWindow id="navWin" module="xp.ui">
		<Window id="timeline_win" class="container" title="Diario" onOpen="doOpen" onPostlayout="layoutComplete" onAndroid:back="manageClose">
			<TitleControl platform="ios">
				<Label class="titleControl">Diario</Label>
			</TitleControl>
			<RightNavButton platform="ios">
				<ImageView class="rightNavImg"/>
			</RightNavButton>
			<Menu id="menu" platform="android">
				<MenuItem id="mn_settings" title="Logout" onClick="f_logout"/>
			</Menu>
			<ListView id="timelineList" defaultItemTemplate="timelineTemplate" onItemclick="dettaglioPost">
				<Templates>
					<ItemTemplate name="timelineTemplate" height="90" width="90%">
						<View id="cat_icon_container" bindId="catColor">
							<Label bindId="cat_icon" id="catIcon"/>
						</View>
						<View id="postData">
							<Label bindId="titolo" id="titolo" />
							<View id="secondLine">
								<Label bindId="cat_mini_icon" id="cat_mini_icon"/>
								<Label id="category" bindId="categoria"/>
							</View>
							<Label id="data_post" bindId="data"/>

						</View>

					</ItemTemplate>
				</Templates>
				<ListSection dataCollection="Timeline" dataTransform="transformData">
					<ListItem cat_icon:text="{catImage}" catColor:backgroundColor="{cat_color}" titolo:text="{name}" cat_mini_icon:text="{cat_mini_icon}" categoria:text="{categoria}" data:text="{postDate}"></ListItem>
				</ListSection>
			</ListView>

		</Window>
	</NavigationWindow>
</Alloy>