<Alloy>
	<NavigationWindow id="navWin" module="xp.ui">
		<Window id="timeline_win" class="container">
			<ListView id="timelineList" defaultItemTemplate="timelineTemplate">
				<Templates>
					<ItemTemplate name="timelineTemplate" height="120" width="Ti.UI.FILL">
						<ImageView bindId="cat_icon" id="cat_icon" />
						<View id="postData">
							<Label bindId="titolo" id="titolo" />
							<View id="secondLine">
								<Label class="line2 fieldLabel" text="Number: " />
								<Label class="line2" bindId="number" id="number" />
								<Label class="line2 fieldLabel" text="Atomic Mass: " />
								<Label class="line2" bindId="mass" id="mass" />
							</View>
						</View>

					</ItemTemplate>
				</Templates>
				<ListSection dataCollection="Timeline" dataTransform="transformData">
					<ListItem cat_icon:image="{catImage}" titolo:text="{name}"></ListItem>
				</ListSection>
			</ListView>
		</Window>
	</NavigationWindow>
</Alloy>