<Alloy>
	
	<Window id="dettaglio_post_win" class="container" title="Dettaglio Post" onOpen="doOpen">
		<TitleControl platform="ios">
			<Label class="titleControl">Dettaglio Post</Label>
		</TitleControl>
		<RightNavButton platform="ios">
			<ImageView class="rightNavImg"/>
		</RightNavButton>
		<Menu id="menu" platform="android">
			<MenuItem id="mn_settings" title="Impostazioni"/>
		</Menu>
		
		<ScrollableView id="scrollableTimeline" dataFunction="updateCollection" dataCollection="Timeline" dataTransform="transformData" showPagingControl="true">
			<View id="dettaglio_post_container">
				<ImageView id="cat_icon" image="{catImage}" />
				<View id="postData">
					<Label id="titolo" text="{name}" />
					<View id="secondLine">
						<ImageView id="cat_mini_icon"/>
						<Label id="category" text="{categoria}"/>
					</View>
					<Label id="data_post" text="{postDate}"/>

				</View>

			</View>
		</ScrollableView>
		<View id="aspect_icon_toolbar"></View>
		<View id="aspect_detail_container">
			
		</View>
		
		
	</Window>
</Alloy>