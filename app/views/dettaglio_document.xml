<Alloy>
	<ScrollableView id="scrollableDocument" dataCollection="aspettiDocument" dataFunction="dataResync" dataTransform="transform">
		<ScrollView id="aspectScrollView">

			<Label id="titolo" class="aspect_title" text="{titolo}"/>
			<View class="subcontainer">
				<Label id="img_icon" text ="{img_icon}"/>
				<Label class="aspect_text" id="nome_file" text="{nome_file}"/>				
				<Label id="filesize" class="aspect_text" text="{file_size}"/>
			</View>
			<Label id="data_creazione" class="aspect_text" text="{data_doc}"/>

		</ScrollView>
	</ScrollableView>
</Alloy>